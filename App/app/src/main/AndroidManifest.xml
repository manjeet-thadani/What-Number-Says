<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.genius.whatnumbersays">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/facts"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".random_facts.RandomFactsMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quest_facts.QuestFactsMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DisplayFactActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".random_facts.TriviaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".random_facts.MathActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".random_facts.DateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".random_facts.YearActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>